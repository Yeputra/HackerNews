<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_stories_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_8p"
        android:layout_marginBottom="@dimen/dimen_8p"
        android:layout_marginRight="@dimen/dimen_8p">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:layout_margin="@dimen/dimen_8p"
                android:text="Title"/>

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dimen_8p"
                android:layout_marginRight="@dimen/dimen_8p"
                android:layout_marginBottom="@dimen/dimen_8p"
                android:text="by: Author"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|left">

                <ImageView
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:src="@drawable/ic_trophy"
                    android:layout_margin="@dimen/dimen_8p"/>

                <TextView
                    android:id="@+id/tv_scores_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8p"
                    android:layout_marginBottom="@dimen/dimen_8p"
                    android:layout_marginRight="@dimen/dimen_16dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:text="Scores"/>

                <ImageView
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:src="@drawable/ic_baseline_comment"
                    android:layout_margin="@dimen/dimen_8p"/>

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8p"
                    android:layout_marginBottom="@dimen/dimen_8p"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:text="Comments"/>

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>