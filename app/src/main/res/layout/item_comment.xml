<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_comment_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_8p"
        android:layout_marginBottom="@dimen/dimen_8p"
        android:layout_marginRight="@dimen/dimen_8p">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_author_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:layout_margin="@dimen/dimen_8p"
                android:text="Author"/>

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dimen_8p"
                android:layout_marginRight="@dimen/dimen_8p"
                android:layout_marginBottom="@dimen/dimen_8p"
                android:text="comment"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>